<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tab_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/tab_menu_bg</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@drawable/tab_menu_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/mechanical</item>
    </style>

    <style name="fontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/mechanical</item>
    </style>

    <style name="signButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/mechanical</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:background">@drawable/radius_coner_button</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>
